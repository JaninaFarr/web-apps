

<%
    companies = Company.all
%>

<ul>
<% for company in companies %>
    <li><%= company["name"] %> - <%= company["city"] %> </li>
<% end %>
</ul>

<table>
    <tr>
        <th>name</th>
        <th>City</th>
        <th>State</th>
    </tr>

    <%for company in companies %>
    <tr>
        <td><%= company ["name"] %></td>
        <td><%= company ["city"] %></td>
        <td><%= company ["state"] %></td>
    </tr>
    <% end %>

